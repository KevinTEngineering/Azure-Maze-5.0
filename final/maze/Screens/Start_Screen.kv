<StartScreen>:
    on_enter: root.enter()

    clap: clap
    welcome_text: welcome_text
    FloatLayout:
        size_hint: None, None

    Label:
        id: welcome_text
        text: "Welcome to the Kinetic Maze!\n\nTo start, clap your hands above your head:"
        font_size: 28
        pos_hint:{"x":.001, "y": 0.4}
        color: 1, 1, 1, 1

    ImageButton:
        id: clap
        source:'images/clap.png'
        size_hint: .7, .8
        center_x: self.width * 0.5
        on_press: root.switch_to_play_screen()
